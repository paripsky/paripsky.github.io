---
import Layout from "../layouts/Layout.astro";
import Logos from "../components/Logos.astro";
import Posts from "../components/Posts.astro";
import Timeline from "../components/Timeline.astro";
import ContactForm from "../components/ContactForm.astro";
import Projects from "../components/Projects.astro";
import DesktopDestroyer from "../components/DesktopDestroyer.astro";
import Tilt from "../components/Tilt.astro";
---

<Layout title="Welcome to Astro.">
  <main class="container m-auto p-4 sm:p-8 text-gray-200">
    <div
      class="pt-[15vh] sm:pt-[30vh] h-screen flex flex-col items-center gap-20"
    >
      <article class="prose w-full block">
        <h1
          class="inline-block mb-4 text-4xl md:text-6xl !leading-normal font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-teal-400"
        >
          Hey, I'm Yonatan
        </h1>
        <ul class="list-none m-0 p-0 text-gray-200">
          <li>ðŸš€ Full Stack Engineer with 7+ years of experience</li>
          <li>
            ðŸ”§ Proficient in Node.js, React, Vue.js, Tailwind CSS, and more
          </li>
          <li>ðŸ’¡ Passionate about exploring new libraries and frameworks</li>
          <li>
            ðŸ’» Check out <a href="#projects" class="text-gray-50">projects</a>
             and <a href="#posts" class="text-gray-50">posts</a> I've worked on
          </li>
          <li>
            ðŸ“§ Explore my <a href="#timeline" class="text-gray-50"
              >work history</a
            > or <a href="#contact" class="text-gray-50">contact me</a> here
          </li>
        </ul>
      </article>
      <Tilt>
        <div class="flex gap-4">
          <Logos />
        </div>
      </Tilt>
    </div>
    <section id="projects">
      <div
        class="container mt-36 md:mt-0 sm:min-h-[100dvh] mx-auto flex flex-col"
      >
        <h1
          class="text-3xl py-8 font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-sky-300 to-sky-400 inline"
        >
          Projects
        </h1>
        <Projects />
      </div>
    </section>
    <section id="posts">
      <div
        class="container mt-36 md:mt-0 sm:min-h-[100dvh] mx-auto flex flex-col"
      >
        <h1
          class="text-3xl py-8 font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-200 to-purple-400 inline"
        >
          Posts
        </h1>
        <Posts />
      </div>
    </section>
    <section id="timeline">
      <div
        class="container mt-36 md:mt-0 sm:min-h-[100dvh] mx-auto flex flex-col"
      >
        <h1
          class="text-3xl pb-2 pt-8 font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-teal-200 to-teal-400 inline"
        >
          Timeline
        </h1>
        <a
          class="link"
          href="https://www.linkedin.com/in/paripsky"
          target="_blank"
        >
          Check out my Linkedin page</a
        >
        <Timeline />
      </div>
    </section>
    <section id="contact">
      <div
        class="container mt-36 md:mt-0 sm:min-h-[100dvh] mx-auto flex flex-col"
      >
        <h1
          class="text-3xl py-8 font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-pink-200 to-pink-400 inline"
        >
          Contact
        </h1>
        <ContactForm />
      </div>
    </section>
  </main>
  <DesktopDestroyer />
</Layout>
