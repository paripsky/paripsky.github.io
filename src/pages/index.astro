---
import Layout from "../layouts/Layout.astro";
import Logos from "../components/Logos.astro";
import Posts from "../components/Posts.astro";
import Timeline from "../components/Timeline.astro";
import ContactForm from "../components/ContactForm.astro";
import Projects from "../components/Projects.astro";
---

<Layout title="Welcome to Astro.">
  <main class="container m-auto p-4 sm:p-8">
    <section
      class="pt-36 sm:pt-0 h-screen flex flex-col sm:flex-row sm:justify-between items-center gap-10"
    >
      <article class="prose w-full">
        <h1 class="inline-block mb-4 text-4xl md:text-6xl !leading-normal font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-teal-400">Hey, I'm Yonatan</h1>
        <p class="m-0 text-lg">
          A Full Stack Engineer with 7+ years of hands-on experience mastering the realms of JavaScript,
          React, and Node.js. Join me on a journey through the dynamic and
          ever-changing landscape of web development, where creativity meets
          functionality to build meaningful online experiences.
        </p>
      </article>
      <div class="flex gap-4">
        <Logos />
      </div>
    </section>
    <section id="projects">
      <div
        class="container mt-36 md:mt-0 sm:min-h-[100dvh] mx-auto flex flex-col items-center md:flex-row"
      >
        <div
          class="flex flex-col w-full md:top-36 lg:w-1/3 my-2 md:mt-12 gap-2"
        >
          <article class="prose w-full md:top-36">
            <h1 class="font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-sky-300 to-sky-400 inline">Projects</h1>
          </article>
        </div>
        <Projects />
      </div>
    </section>
    <section id="posts">
      <div
        class="container mt-36 md:mt-0 sm:min-h-[100dvh] mx-auto flex flex-col items-center md:flex-row"
      >
        <div
          class="flex flex-col w-full md:top-36 lg:w-1/3 my-2 md:mt-12 gap-2"
        >
          <article class="prose w-full md:top-36">
            <h1 class="font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-purple-200 to-purple-400 inline">Posts</h1>
          </article>
        </div>
        <Posts />
      </div>
    </section>
    <section id="timeline">
      <div
        class="container mt-36 md:mt-12 sm:min-h-[100dvh] mx-auto flex flex-col items-center md:flex-row"
      >
        <div
          class="flex flex-col w-full md:top-36 lg:w-1/3 mt-2 md:mt-12 gap-2"
        >
          <article class="prose w-full">
            <h1 class="font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-teal-200 to-teal-400 inline">Timeline</h1>
          </article>
          <a
            class="link"
            href="https://www.linkedin.com/in/paripsky"
            target="_blank"
          >
            Check out my Linkedin page</a
          >
        </div>
        <Timeline />
      </div>
    </section>
    <section id="contact">
      <div
        class="container mt-36 mb-10 md:mt-0 sm:min-h-[100dvh] mx-auto flex flex-col items-center md:flex-row"
      >
        <div
          class="flex flex-col w-full md:top-36 lg:w-1/3 mt-2 md:mt-12 gap-2"
        >
          <article class="prose w-full">
            <h1 class="font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-pink-200 to-pink-400 inline">Contact</h1>
          </article>
        </div>
        <ContactForm />
      </div>
    </section>
  </main>
</Layout>
