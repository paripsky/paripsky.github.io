---
import { Icon } from "astro-icon/components";

const colors = [
  "hover:border-sky-400 hover:shadow-sky-800",
  "hover:border-blue-400 hover:shadow-blue-800",
  "hover:border-yellow-400 hover:shadow-yellow-800",
  "hover:border-lime-400 hover:shadow-lime-800",
  "hover:border-cyan-400 hover:shadow-cyan-800",
  "hover:border-green-400 hover:shadow-green-800",
  "hover:border-emerald-400 hover:shadow-emerald-800",
  "hover:border-teal-400 hover:shadow-teal-800",
  "hover:border-indigo-400 hover:shadow-indigo-800",
  "hover:border-violet-400 hover:shadow-violet-800",
  "hover:border-purple-400 hover:shadow-purple-800",
  "hover:border-fuchsia-400 hover:shadow-fuchsia-800",
  "hover:border-red-400 hover:shadow-red-800",
  "hover:border-orange-400 hover:shadow-orange-800",
  "hover:border-amber-400 hover:shadow-amber-800",
];

const projects = [
  {
    title: "React state management in under 40 lines of code",
    description:
      "A guide on how to built a custom state management solution for react in under 40 lines of code with typescript support",
    siteUrl:
      "https://dev.to/paripsky/build-your-own-react-state-management-library-in-under-40-lines-of-code-with-typescript-support-hji",
    tags: ["React", "Typescript"],
  },
  {
    title: "Devedash",
    description:
      "Devedash is a dashboard building app, built with Next.js, Mantine UI and Supabase.",
    githubUrl: "https://github.com/paripsky/devedash",
    siteUrl: "https://devedash.vercel.app/",
    image: "https://devedash.vercel.app/favicon.ico",
    tags: ["Next.js", "Supabase"],
  },
  {
    title: "FreshLinks",
    description:
      "A short link generator with built in analytics, built with Fresh and Deno KV.",
    githubUrl: "https://github.com/paripsky/FreshLinks",
    siteUrl: "https://freshlinks.deno.dev",
    image: "https://freshlinks.deno.dev/favicon.ico",
    tags: ["Deno", "Fresh", "Deno KV"],
  },
  {
    title: "OG Scrapi",
    description:
      "An API that retrieves Open Graph (OG) meta tags and other metadata from a given URL, providing a convenient way to access and utilize website metadata.",
    githubUrl: "https://github.com/paripsky/og-scrapi",
    siteUrl:
      "https://og-scrapi.deno.dev/api/meta?url=https://develist.vercel.app/",
    image: "https://upload.wikimedia.org/wikipedia/commons/e/e8/Deno_2021.svg",
    tags: ["Deno", "Open Graph", "Scrape"],
  },
  {
    title: "Develist",
    description:
      "Develist is a web application built using Nuxt 3 and Supabase, designed to help developers manage and organize their development tools and resources.",
    githubUrl: "https://github.com/paripsky/develist",
    siteUrl:
      "https://develist.vercel.app/?link=b07aab82-0905-41fd-93b8-6f19ce2bdfb5",
    image: "https://develist.vercel.app/favicon.ico",
    tags: ["Nuxt", "Supabase"],
  },
  {
    title: "node-context-storage",
    description: `A simple utility for managing a context across asynchronous boundaries in NodeJS.`,
    githubUrl: "https://github.com/paripsky/node-context-storage",
    siteUrl: "https://www.npmjs.com/package/node-context-storage",
    image: "https://nodejs.org/static/images/logo.svg",
    tags: ["NodeJS", "Express", "Typescript"],
  },
  {
    title: "QTerminal",
    description: "A Quake-style console for your website.",
    githubUrl: "https://github.com/paripsky/qterminal",
    siteUrl: "https://paripsky.github.io/qterminal",
    image:
      "https://upload.wikimedia.org/wikipedia/commons/5/51/Windows_Terminal_logo.svg",
    tags: ["Typescript", "CSS Theming"],
  },
  {
    title: "HTML, CSS, JS - The Basics",
    description: `An introduction lecture into the basics of HTML, CSS & JS`,
    siteUrl: "/lectures/html-css-js-basics.html",
    tags: ["HTML", "CSS", "JS"],
  },
  {
    title: "Into to Vue 2",
    description: `An interactive presentation that teaches the basics of Vue 2, Options API, core functionality and more`,
    siteUrl: "/lectures/intro-to-vue.html",
    tags: ["Vue"],
  },
  {
    title: "Into to NodeJS",
    description: `A presentation that teaches the basics of NodeJS, how to create a simple server with express & more`,
    siteUrl:
      "https://docs.google.com/presentation/d/1d0NwWU7ZvB0TwMsalfm8mBjEdqGUHWEO7SGMG_gzMyM",
    tags: ["NodeJS", "Express", "JS"],
  },
  {
    title: "Semantic Tokens in Chakra UI",
    description: "A guide on how to use semantic tokens in ChakraUI",
    siteUrl: "https://dev.to/paripsky/semantic-tokens-in-chakra-ui-4k1b",
    tags: ["React", "ChakraUI"],
  },
];
---

<ul
  class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 grid-rows gap-4 w-full"
>
  {
    projects.map((project, i) => (
      <li class="h-full">
        <div
          class={`rounded-lg p-4 bg-base-100/50 h-full relative border border-gray-600 shadow-lg transition-all duration-300 ${colors[i]}`}
        >
          {project.image && (
            <img
              class="absolute right-2 top-2 w-10 h-10"
              src={project.image}
              alt={project.title}
            />
          )}
          <div class="flex flex-col gap-4 h-full">
            <a href={project.siteUrl} class="card-title font-bold">
              {project.title}
            </a>
            <p class="whitespace-pre-wrap flex-1">{project.description}</p>
            <div class="card-actions justify-between items-center mt-2">
              <div class="flex gap-2">
                {project.githubUrl && (
                  <a href={project.githubUrl} target="_blank">
                    <Icon name="mdi:github" class="size-6" />
                  </a>
                )}
                {project.siteUrl && (
                  <a href={project.siteUrl} target="_blank">
                    <Icon name="mdi:link" class="size-6" />
                  </a>
                )}
                <div class="ml-auto flex gap-1">
                  {project.tags.map((tag) => (
                    <div class="inline-block bg-slate-700 text-gray-200 rounded-full px-3 py-1 text-sm font-semibold">
                      {tag}
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      </li>
    ))
  }
</ul>
