---
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="@paripsky's Portfolio" />
    <meta
      property="og:description"
      content="Explore the portfolio of Paripsky, a full stack engineer specializing in JavaScript, React, and Node.js."
    />
    <meta property="og:url" content="https://paripsky.github.io/" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Paripsky's Portfolio" />
    <meta
      name="twitter:description"
      content="Explore the portfolio of Paripsky, a full stack engineer specializing in JavaScript, React, and Node.js."
    />

    <meta
      name="description"
      content="Explore the portfolio of Paripsky, a full stack engineer specializing in JavaScript, React, and Node.js."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-1YD1ZSVP59"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-1YD1ZSVP59");
    </script>
  </head>
  <body
    class="flex min-h-screen flex-col items-center bg-slate-950 text-white relative"
    style="color-scheme: dark;"
  >
    <slot />
  </body>
</html>
